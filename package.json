    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.0.2",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/splash-screen": "^7.0.2",
    "@capacitor/status-bar": "^7.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
